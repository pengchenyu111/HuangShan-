<?xml version="1.0" encoding="utf-8"?>
<!--设置界面-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".admin.activity.SettingsActivity">

    <ImageView
        android:id="@+id/setting_back_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/icon_back_black" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!--管理员部分的容器-->
                    <LinearLayout
                        android:id="@+id/setting_change_password_ll_root1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp">

                        <!--item左边的Icon-->
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/setting_icon"/>

                        <!--item中间部分的文字-->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:text="修改密码"/>

                        <!--item右边的文字-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp" />

                        <!--item右边的Icon 默认是向右的箭头-->
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/homepage_right_arrow" />
                    </LinearLayout>

                    <!--下分割线-->
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="#E0E0E0" />
                </LinearLayout>
            </LinearLayout>


            <Button
                android:id="@+id/admin_exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="420dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/btn_long_radius_red"
                android:text="退出登录"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>



</LinearLayout>