<?xml version="1.0" encoding="utf-8"?>
<!--4个导航栏之一：数据-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
        <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="320dp"
          android:background="@mipmap/flower">

            <com.heweather.plugin.view.HorizonView
            android:id="@+id/heweather_plugin_main_view"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"/>

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:text="此刻，黄山最美"/>
            <TextView
            android:id="@+id/home_page_admin_poetry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"/>
            <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="20dp"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp">
              <LinearLayout
                  android:orientation="vertical"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:gravity="center">
                  <ImageButton
                      android:id="@+id/home_page_admin_map"
                      android:layout_width="50dp"
                      android:layout_height="50dp"
                      android:background="@drawable/btn_circle_green"
                      android:src="@mipmap/map"
                      android:layout_gravity="center"/>
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="景区地图"
                      android:textSize="14sp"
                      android:textColor="@color/white"
                      android:gravity="center"
                      android:layout_marginTop="10dp"/>
              </LinearLayout>
              <LinearLayout
                  android:orientation="vertical"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:gravity="center">
                  <ImageButton
                      android:id="@+id/home_page_admin_weather"
                      android:layout_width="50dp"
                      android:layout_height="50dp"
                      android:background="@drawable/btn_circle_blue"
                      android:src="@mipmap/weather"
                      android:layout_gravity="center"/>
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="景区天气"
                      android:textSize="14sp"
                      android:textColor="@color/white"
                      android:gravity="center"
                      android:layout_marginTop="10dp"/>
              </LinearLayout>
              <LinearLayout
                  android:orientation="vertical"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:gravity="center">
                  <ImageButton
                      android:id="@+id/home_page_admin_ticket"
                      android:layout_width="50dp"
                      android:layout_height="50dp"
                      android:background="@drawable/btn_circle_purple"
                      android:src="@mipmap/ticket"
                      android:layout_gravity="center"/>
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="景区门票"
                      android:textSize="14sp"
                      android:textColor="@color/white"
                      android:gravity="center"
                      android:layout_marginTop="10dp"/>
              </LinearLayout>
              <LinearLayout
                  android:orientation="vertical"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:gravity="center">
                  <ImageButton
                      android:id="@+id/home_page_admin_rule"
                      android:layout_width="50dp"
                      android:layout_height="50dp"
                      android:background="@drawable/btn_circle_yellow"
                      android:src="@mipmap/rules"
                      android:layout_gravity="center"/>
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="景区条款"
                      android:textSize="14sp"
                      android:textColor="@color/white"
                      android:gravity="center"
                      android:layout_marginTop="10dp"/>
              </LinearLayout>
          </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp">

            <com.youth.banner.Banner
                android:id="@+id/home_page_admin_banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </com.youth.banner.Banner>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="游客服务"
                android:textSize="20sp"
                android:textColor="@color/blank" />
            
            <LinearLayout
                android:id="@+id/home_page_admin_camp"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@mipmap/camp"
                android:gravity="bottom">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="露营管理"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日升日落，云起云涌"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="交通服务"
                android:textSize="20sp"
                android:textColor="@color/blank" />

            <LinearLayout
                android:id="@+id/home_page_admin_cableway"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@mipmap/cableway"
                android:gravity="bottom">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="缆车索道"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="游览的绝佳方式"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_page_admin_change_car"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@mipmap/change_car"
                android:gravity="bottom">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="班车换乘"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="游览更加轻松"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
  </androidx.core.widget.NestedScrollView>

