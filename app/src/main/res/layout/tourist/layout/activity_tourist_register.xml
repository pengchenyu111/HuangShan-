<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tourist_register_back_btn"
            android:layout_width="20dp"
            android:layout_height="14dp"
            android:layout_gravity="left|center"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/icon_back_black" />
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="用户注册"
            android:textSize="20dp"
            android:textColor="@color/deep_blank"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <EditText
                android:id="@+id/tourist_register_phone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:hint="请输入手机号"
                android:inputType="phone"/>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
                <EditText
                    android:id="@+id/tourist_register_verification"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:hint="验证码"
                    android:textSize="16sp" />
                <Button
                    android:id="@+id/tourist_register_get_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="40dp"
                    android:text="发送验证码"/>
            </RelativeLayout>

            <EditText
                android:id="@+id/tourist_register_password_edit_1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:textSize="16sp"
                android:hint="请输入密码"
                android:inputType="textPassword"/>

            <EditText
                android:id="@+id/tourist_register_password_edit_2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:textSize="16sp"
                android:hint="请确认密码"
                android:inputType="textPassword"/>
            <Button
                android:id="@+id/tourist_register_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_selector_login"
                android:text="确  认"
                android:textColor="@color/white"
                android:textSize="18dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>