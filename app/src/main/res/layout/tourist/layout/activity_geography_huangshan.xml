<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/geography_huangshan_back_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_back_black"
            android:layout_gravity="left|center"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="地理黄山"
            android:textSize="20dp"
            android:textColor="@color/deep_blank"/>
    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="40dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="地理位置"
                    android:textSize="18sp"
                    android:textColor="@color/deep_blank"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/huangshan_geography_info"/>
                <com.amap.api.maps.MapView
                    android:id="@+id/geography_huangshan_map"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="生态环境"
                    android:textSize="18sp"
                    android:textColor="@color/deep_blank"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/huangshan_nature_plant"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="140dp"
                        android:layout_marginLeft="15dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/huangshan_nature_plant_1"/>
                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="140dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="15dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/huangshan_nature_plant_2"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/huangshan_nature_animal"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="140dp"
                        android:layout_marginLeft="15dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/huangshan_nature_animal_1"/>
                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="140dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="15dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/huangshan_nature_animal_2"/>
                </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="自然气候"
                    android:textSize="18sp"
                    android:textColor="@color/deep_blank"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/huangshan_weather"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="140dp"
                        android:layout_marginLeft="15dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/huangshan_winter"/>
                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="140dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="15dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/huangshan_summer"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="地质地貌"
                    android:textSize="18sp"
                    android:textColor="@color/deep_blank"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/huangshan_rock_shape"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="140dp"
                        android:layout_marginLeft="15dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/huangshan_rock_shape_1"/>
                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="140dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="15dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/huangshan_rock_shape_2"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>